<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DownOptionActivity">
    <FrameLayout
        android:id="@+id/native_ad_layout"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear"
        android:orientation="vertical" />
    <ImageView
        android:layout_width="30sp"
        android:layout_height="25sp"
        android:src="@drawable/ic_back"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/back"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5sp"
            android:background="@color/btnclr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/dialogue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Choose the option"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala"
            android:textAlignment="center"/>
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Drive"
                android:layout_marginStart="20sp"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_back"
                app:backgroundTint="@null"
                android:id="@+id/gdrive"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adrino Link"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:background="@drawable/btn_back"
                app:backgroundTint="@null"
                android:id="@+id/adrino"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recommended"
            android:textColor="@color/white"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="15sp"
            android:textSize="13sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5sp"
            android:background="@color/btnclr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/dialogue2"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/native_ad_layout_one"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear"
        android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>