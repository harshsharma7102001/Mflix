<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".WebDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="35sp"
            android:layout_height="25sp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="10sp"
            app:iconTint="@color/btnclr"
            app:backgroundTint="@null"
            android:layout_marginTop="10sp"
            app:layout_constraintStart_toStartOf="@id/movie_Img"
            app:layout_constraintTop_toTopOf="@id/movie_Img"
            android:id="@+id/back"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="390sp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/movie_Img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_Img"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:layout_marginStart="15sp"
                    android:id="@+id/action"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50sp"
                    android:id="@+id/star"/>
                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="23sp"
                    android:src="@drawable/star"/>
            </RelativeLayout>
            <FrameLayout
                android:id="@+id/native_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginStart="7sp"
                android:layout_marginTop="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="7sp"
                android:orientation="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Name Here"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/akaya_telivigala"
                android:layout_marginStart="10sp"
                android:id="@+id/movie_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/white"
                android:layout_marginStart="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moview Descriptino will appear here"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="@font/akaya_telivigala"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:id="@+id/description"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/btnclr"
                android:layout_margin="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download (All Episodes)"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/akaya_telivigala"
                android:layout_marginStart="10sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="720p"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:layout_marginStart="20sp"
                    android:layout_alignParentStart="true"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20sp"
                    android:text="Download"
                    android:textSize="15sp"
                    android:background="@drawable/btn_back"
                    app:backgroundTint="@null"
                    android:id="@+id/download"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>